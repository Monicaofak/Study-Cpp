#include <iostream>
using namespace std;
int main()
{
   int i = 1;
   while (i <= 10)      //while可以看成加强版if if执行到大括号后结束，继续向下执行 
   {                    //while 执行完大括号后，返回但while中作判断，条件不符合又向下执行
   cout<<"小人本住在苏州城边，第"<<i<<"遍\n"; //思考中模拟循环的逻辑走一遍
   i++;                                        //通过循环控制变量，控制循环的次数 此处是i
   }                                            //i <= 10是循环操作语句   i=1是控制变量的初值
}                                               //步骤：初值、判断、更新







#include <iostream>
using namespace std;
int main()
{
   int i = 1;
   while (i <= 10)      //while可以看成加强版if if执行到大括号后结束，继续向下执行 
   {                    //while 执行完大括号后，返回但while中作判断，条件不符合又向下执行
   cout<<"小人本住在苏州城边，第"<<i<<"遍\n"; //思考中模拟循环的逻辑走一遍
   i++;                                        //通过循环控制变量，控制循环的次数 此处是i
   }                                            //i <= 10是循环操作语句   i=1是控制变量的初值
}                                               //步骤：初值、判断、更新
                                                //while特点：先判断，再执行
